<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/texViewHistory"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:gravity="center|end"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:fontFamily="@font/baloo"
            android:gravity="center|end"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textSize="60sp" />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:columnCount="4"
            app:rowCount="5">

            <Button
                android:id="@+id/ac"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@color/black"
                android:fontFamily="@font/baloo"
                android:text="AC"
                android:textColor="@color/orange"
                android:textSize="30sp"
                app:backgroundTint="#000000"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="0" />

            <Button
                android:id="@+id/del"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@color/black"
                android:fontFamily="@font/baloo"
                android:text="DEL"
                android:textColor="@color/orange"
                android:textSize="30sp"
                app:backgroundTint="#000000"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="0" />

            <Button
                android:id="@+id/div"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@color/black"
                android:fontFamily="@font/baloo"
                android:text="/"
                android:textColor="@color/orange"
                android:textSize="30sp"
                app:backgroundTint="#000000"
                app:layout_column="2"
                app:layout_columnWeight="1"
                app:layout_row="0" />

            <Button
                android:id="@+id/multi"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@color/black"
                android:fontFamily="@font/baloo"
                android:text="X"
                android:textColor="@color/orange"
                android:textSize="30sp"
                app:backgroundTint="#000000"
                app:layout_column="3"
                app:layout_columnWeight="1"
                app:layout_row="0" />

            <Button
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:fontFamily="@font/baloo"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:backgroundTint="#000000"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="1" />

            <Button
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@color/black"
                android:fontFamily="@font/baloo"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:backgroundTint="#000000"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="1" />

            <Button
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@color/black"
                android:fontFamily="@font/baloo"
                android:text="9"
                android:textSize="30sp"
                app:backgroundTint="#000000"
                app:layout_column="2"
                app:layout_columnWeight="1"
                app:layout_row="1" />

            <Button
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@color/black"
                android:fontFamily="@font/baloo"
                android:text=" -"
                android:textColor="@color/orange"
                android:textSize="35sp"
                app:backgroundTint="#000000"
                app:layout_column="3"
                app:layout_columnWeight="1"
                app:layout_row="1" />

            <Button
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:fontFamily="@font/baloo"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:backgroundTint="#000000"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="2" />

            <Button
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@color/black"
                android:fontFamily="@font/baloo"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:backgroundTint="#000000"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="2" />

            <Button
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@color/black"
                android:fontFamily="@font/baloo"
                android:text="6"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:backgroundTint="#000000"
                app:layout_column="2"
                app:layout_columnWeight="1"
                app:layout_row="2" />

            <Button
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@color/black"
                android:fontFamily="@font/baloo"
                android:text="+"
                android:textColor="@color/orange"
                android:textSize="30sp"
                app:backgroundTint="#000000"
                app:layout_column="3"
                app:layout_columnWeight="1"
                app:layout_row="2" />

            <Button
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@color/black"
                android:fontFamily="@font/baloo"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:backgroundTint="#000000"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="3" />

            <Button
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@color/black"
                android:fontFamily="@font/baloo"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:backgroundTint="#000000"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="3" />

            <Button
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@color/black"
                android:fontFamily="@font/baloo"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:backgroundTint="#000000"
                app:layout_column="2"
                app:layout_columnWeight="1"
                app:layout_row="3" />

            <Button
                android:id="@+id/percent"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@color/black"
                android:fontFamily="@font/baloo"
                android:text="%"
                android:textColor="@color/orange"
                android:textSize="30sp"
                app:backgroundTint="#000000"
                app:layout_column="3"
                app:layout_columnWeight="1"
                app:layout_row="3" />

            <Button
                android:id="@+id/pi"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@color/black"
                android:fontFamily="@font/baloo"
                android:text="Ï€"
                android:textColor="@color/orange"
                android:textSize="30sp"
                app:backgroundTint="#000000"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="4" />

            <Button
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@color/black"
                android:fontFamily="@font/baloo"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:backgroundTint="#000000"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="4" />

            <Button
                android:id="@+id/dot"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@color/black"
                android:fontFamily="@font/baloo"
                android:text="."
                android:textColor="@color/white"
                android:textSize="30sp"
                app:backgroundTint="#000000"
                app:layout_column="2"
                app:layout_columnWeight="1"
                app:layout_row="4" />

            <Button
                android:id="@+id/equal"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@color/black"
                android:fontFamily="@font/baloo"
                android:text="="
                android:textColor="@color/orange"
                android:textSize="30sp"
                app:backgroundTint="#000000"
                app:layout_column="3"
                app:layout_columnWeight="1"
                app:layout_row="4" />
        </androidx.gridlayout.widget.GridLayout>
    </LinearLayout>

</LinearLayout>